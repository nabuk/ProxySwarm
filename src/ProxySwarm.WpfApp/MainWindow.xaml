<Window x:Class="ProxySwarm.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:uc="clr-namespace:ProxySwarm.WpfApp.Controls"
        Title="Proxy Swarm" Height="300" Width="400"
        Icon="appicon.ico"
        Background="#1D1D1D"
        ResizeMode="CanMinimize"
        >
    <DockPanel>
        <DockPanel DockPanel.Dock="Right" Width="110" Margin="10">
            <uc:PlayPauseControl DockPanel.Dock="Bottom" Margin="10" Height="50" />
            <uc:DropFilesControl />
        </DockPanel>
        
        <UniformGrid Columns="2" Rows="2"
                     Margin="10">
            <uc:BigIndicatorControl LabelText="Successes" IndicatorText="0" Foreground="#8B1" />
            <uc:BigIndicatorControl LabelText="Fails" IndicatorText="0" Foreground="#C30" />
            <uc:BigIndicatorControl LabelText="Proxies" IndicatorText="6231" Foreground="{StaticResource InactiveFontColorBrush}" />
            <uc:BigIndicatorControl LabelText="Tasks" IndicatorText="23" Foreground="{StaticResource InactiveFontColorBrush}" />
        </UniformGrid>
    </DockPanel>
</Window>
